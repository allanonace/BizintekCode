                            <DataTemplate>
                              <ViewCell>
                                 <StackLayout Orientation="Vertical" >
                                    <Label Text="{Binding Title}" Margin="14,0,0,0" VerticalOptions="Center" Font="Bold,20" TextColor="Black"/>
